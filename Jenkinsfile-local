pipeline {
    agent any

    options {
        timestamps()
        ansiColor('xterm')
        timeout(time: 30, unit: 'MINUTES')
        buildDiscarder(logRotator(numToKeepStr: '5'))
        skipDefaultCheckout(true)
    }

    environment {
        // Variables de entorno para el despliegue local
        VITE_API_URL = 'http://localhost:8080'
        VITE_FRONTEND_URL = 'http://localhost:5173'
        FRONT_PORT = '5173'

        // Configuraci√≥n Docker
        DOCKER_IMAGE = 'marketplace-frontend-local'
        DOCKER_TAG = "${env.BUILD_NUMBER}"
        CONTAINER_NAME = 'marketplace_frontend'
    }

    parameters {
        booleanParam(
            name: 'RUN_TESTS',
            defaultValue: false,
            description: 'Ejecutar tests antes del build'
        )
        booleanParam(
            name: 'CLEAN_BUILD',
            defaultValue: false,
            description: 'Limpiar node_modules y hacer build desde cero'
        )
        string(
            name: 'CUSTOM_API_URL',
            defaultValue: 'http://localhost:8080',
            description: 'URL del backend API (runtime)'
        )
        string(
            name: 'CUSTOM_FRONTEND_URL',
            defaultValue: 'http://localhost:5174',
            description: 'URL del frontend (runtime)'
        )
        string(
            name: 'CUSTOM_PORT',
            defaultValue: '5174',
            description: 'Puerto en el host para exponer el frontend'
        )
    }

    stages {
        stage('üßπ Limpieza y Checkout') {
            steps {
                script {
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'
                    echo 'üßπ Limpiando workspace y archivos anteriores...'
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'

                    // Limpiar directorios de test y build
                    bat '''
                        @echo off
                        if exist playwright-report rmdir /s /q playwright-report
                        if exist test-results rmdir /s /q test-results
                        if exist .playwright rmdir /s /q .playwright
                        if exist dist rmdir /s /q dist
                    '''
                }

                checkout scm

                script {
                    env.GIT_COMMIT_SHORT = bat(
                        script: '@git rev-parse --short HEAD',
                        returnStdout: true
                    ).trim()

                    echo "‚úÖ Commit: ${env.GIT_COMMIT_SHORT}"

                    // Sobrescribir con par√°metros personalizados si existen
                    if (params.CUSTOM_API_URL != 'http://localhost:8080') {
                        env.VITE_API_URL = params.CUSTOM_API_URL
                    }
                    if (params.CUSTOM_FRONTEND_URL != 'http://localhost:5174') {
                        env.VITE_FRONTEND_URL = params.CUSTOM_FRONTEND_URL
                    }
                    if (params.CUSTOM_PORT != '5174') {
                        env.FRONT_PORT = params.CUSTOM_PORT
                    }

                    echo """
‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
üìã Configuraci√≥n del Build:
‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
  üîπ API URL:      ${env.VITE_API_URL}
  üîπ Frontend URL: ${env.VITE_FRONTEND_URL}
  üîπ Puerto Host:  ${env.FRONT_PORT}
  üîπ Imagen:       ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}
  üîπ Container:    ${env.CONTAINER_NAME}
‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
                    """
                }
            }
        }

        stage('üß™ Tests (Opcional)') {
            when {
                expression { params.RUN_TESTS }
            }
            steps {
                script {
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'
                    echo 'üß™ Ejecutando Tests...'
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'

                    catchError(buildResult: 'SUCCESS', stageResult: 'UNSTABLE') {
                        bat '''
                            @echo off
                            if exist node_modules (
                                echo ‚úÖ node_modules existe, ejecutando tests...
                                call npm run test || echo ‚ö†Ô∏è Tests fallaron pero continuamos
                            ) else (
                                echo üì¶ Instalando dependencias...
                                call npm install
                                call npm run test || echo ‚ö†Ô∏è Tests fallaron pero continuamos
                            )
                        '''
                    }
                }
            }
        }

        stage('üê≥ Detener Contenedor Anterior') {
            steps {
                script {
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'
                    echo 'üê≥ Deteniendo y removiendo contenedor anterior...'
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'

                    bat """
                        @echo off
                        docker stop ${env.CONTAINER_NAME} 2>nul || echo ‚ÑπÔ∏è  No hay contenedor corriendo
                        docker rm ${env.CONTAINER_NAME} 2>nul || echo ‚ÑπÔ∏è  No hay contenedor que remover
                    """
                }
            }
        }

        stage('üèóÔ∏è Build Docker Image') {
            steps {
                script {
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'
                    echo 'üèóÔ∏è  Construyendo imagen Docker...'
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'

                    def buildDate = bat(
                        script: '@echo off & echo %date% %time%',
                        returnStdout: true
                    ).trim()

                    // Build sin variables de entorno (se configuran en runtime)
                    bat """
                        docker build ^
                            --build-arg BUILD_DATE="${buildDate}" ^
                            --build-arg GIT_COMMIT="${env.GIT_COMMIT_SHORT}" ^
                            --build-arg VERSION="${env.BUILD_NUMBER}" ^
                            -t ${env.DOCKER_IMAGE}:${env.DOCKER_TAG} ^
                            -t ${env.DOCKER_IMAGE}:latest ^
                            .
                    """

                    echo "‚úÖ Imagen construida: ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}"
                }
            }
        }

        stage('üöÄ Desplegar Contenedor') {
            steps {
                script {
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'
                    echo 'üöÄ Desplegando contenedor...'
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'

                    // Ejecutar el contenedor con las variables de entorno en runtime
                    bat """
                        docker run -d ^
                            --name ${env.CONTAINER_NAME} ^
                            -p ${env.FRONT_PORT}:80 ^
                            -e VITE_API_URL=${env.VITE_API_URL} ^
                            -e VITE_FRONTEND_URL=${env.VITE_FRONTEND_URL} ^
                            --restart unless-stopped ^
                            ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}
                    """

                    echo "‚úÖ Contenedor iniciado: ${env.CONTAINER_NAME}"
                }
            }
        }

        stage('‚úÖ Verificar Despliegue') {
            steps {
                script {
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'
                    echo '‚úÖ Verificando que el contenedor est√© corriendo...'
                    echo '‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ'

                    sleep 3

                    def status = bat(
                        script: "@docker ps --filter name=${env.CONTAINER_NAME} --format \"{{.Status}}\"",
                        returnStdout: true
                    ).trim()

                    if (status.contains('Up')) {
                        echo "‚úÖ Contenedor corriendo correctamente"

                        // Mostrar logs iniciales
                        echo "\nüìã Logs del contenedor:"
                        bat "docker logs ${env.CONTAINER_NAME}"

                        // Verificar el config.js para confirmar que las variables se inyectaron
                        echo "\nüîç Verificando config.js con variables en runtime:"
                        bat """
                            docker exec ${env.CONTAINER_NAME} cat /usr/share/nginx/html/config.js || echo ‚ö†Ô∏è  No se pudo leer config.js
                        """

                    } else {
                        error("‚ùå El contenedor no est√° corriendo")
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                echo """
‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
‚úÖ DESPLIEGUE COMPLETADO EXITOSAMENTE
‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ

üåê Frontend disponible en: http://localhost:${env.FRONT_PORT}
üîó API Backend:            ${env.VITE_API_URL}

üì¶ Imagen Docker:    ${env.DOCKER_IMAGE}:${env.DOCKER_TAG}
üê≥ Contenedor:       ${env.CONTAINER_NAME}
üè∑Ô∏è  Commit:           ${env.GIT_COMMIT_SHORT}

üìã Comandos √∫tiles:
   ‚Ä¢ Ver logs:       docker logs ${env.CONTAINER_NAME}
   ‚Ä¢ Ver logs live:  docker logs -f ${env.CONTAINER_NAME}
   ‚Ä¢ Detener:        docker stop ${env.CONTAINER_NAME}
   ‚Ä¢ Reiniciar:      docker restart ${env.CONTAINER_NAME}
   ‚Ä¢ Remover:        docker rm -f ${env.CONTAINER_NAME}

‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
                """
            }
        }
        failure {
            script {
                echo """
‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
‚ùå DESPLIEGUE FALLIDO
‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ

Por favor revisa los logs arriba para m√°s detalles.

üìã Comandos de debug:
   ‚Ä¢ Ver logs:       docker logs ${env.CONTAINER_NAME}
   ‚Ä¢ Ver estado:     docker ps -a
   ‚Ä¢ Ver im√°genes:   docker images | findstr marketplace

‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
                """

                // Intentar mostrar logs si el contenedor existe
                bat """
                    docker logs ${env.CONTAINER_NAME} 2>nul || echo ‚ÑπÔ∏è  No hay logs disponibles
                """
            }
        }
        cleanup {
            script {
                echo 'üßπ Limpieza post-build...'
                // Opcional: limpiar im√°genes sin tag
                bat '''
                    @echo off
                    docker image prune -f 2>nul || echo ‚ÑπÔ∏è  No hay im√°genes que limpiar
                '''
            }
        }
    }
}

