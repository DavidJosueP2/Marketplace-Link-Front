server {
    listen 80;
    server_name _;

    # Directorio raíz del frontend (coincide con el Dockerfile)
    root /usr/share/nginx/html;
    index index.html;

    # -------------------------------------------------------------------------
    # Archivos estáticos (assets, js, css) - servir directamente
    # -------------------------------------------------------------------------
    location /assets/ {
        try_files $uri =404;
        access_log off;
        add_header Cache-Control "public, max-age=31536000, immutable";
    }

    # Archivos en la raíz (manifest, robots.txt, favicon, etc.)
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|webp)$ {
        try_files $uri =404;
        access_log off;
        add_header Cache-Control "public, max-age=31536000";
    }

    # -------------------------------------------------------------------------
    # SPA Routing - TODAS las rutas que no sean archivos físicos van a index.html
    # -------------------------------------------------------------------------
    location / {
        try_files $uri $uri/ /index.html;
    }

    # -------------------------------------------------------------------------
    # Seguridad básica (cabeceras HTTP)
    # -------------------------------------------------------------------------
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # -------------------------------------------------------------------------
    # Optimización de logs y tamaños de archivos
    # -------------------------------------------------------------------------
    client_max_body_size 10M;
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log warn;

    # -------------------------------------------------------------------------
    # Deshabilitar logs para healthcheck
    # -------------------------------------------------------------------------
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}
